local WindUILibrary = {}

function WindUILibrary.CreateWindow(options)
    local playerGui = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    for _, gui in ipairs(playerGui:GetChildren()) do
        if gui:IsA("ScreenGui") and (gui.Name == "WindUI" or gui.Name == options.Title or gui.Name:find("WindUI_")) then
            gui:Destroy()
        end
    end

    local Players = game:GetService("Players")
    local UserInputService = game:GetService("UserInputService")
    local TweenService = game:GetService("TweenService")
    local RunService = game:GetService("RunService")

    local player = Players.LocalPlayer
    local username = player.Name
    local screenSize = workspace.CurrentCamera.ViewportSize

    local config = {
        Title = options.Title or "WindUI",
        Size = options.Size or UDim2.fromOffset(290, 340),
        Position = options.Position or UDim2.new(0.5, -145, 0.5, -170),
        Theme = options.Theme or "Dark",
        Transparent = options.Transparent or false,
        HasOutline = options.HasOutline or true,
        SideBarWidth = options.SideBarWidth or 130,
        Icon = options.Icon or nil
    }

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "WindUI_" .. config.Title
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.Parent = playerGui

    local welcomeFrame = Instance.new("Frame")
    welcomeFrame.Size = UDim2.new(0, math.min(250, screenSize.X * 0.6), 0, 35)
    welcomeFrame.Position = UDim2.new(1, -math.min(250, screenSize.X * 0.6) - 10, 0, 10)
    welcomeFrame.BackgroundTransparency = 1
    welcomeFrame.ZIndex = 5
    welcomeFrame.Parent = screenGui

    local welcomeText = Instance.new("TextLabel")
    welcomeText.Size = UDim2.new(1, 0, 1, 0)
    welcomeText.BackgroundTransparency = 1
    welcomeText.Text = "Welcome  " .. username
    welcomeText.TextColor3 = Color3.fromRGB(255, 255, 255)
    welcomeText.TextSize = 16
    welcomeText.Font = Enum.Font.GothamBold
    welcomeText.TextXAlignment = Enum.TextXAlignment.Right
    welcomeText.ZIndex = 5
    welcomeText.Parent = welcomeFrame

    local textGradient = Instance.new("UIGradient")
    textGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 240, 245)), 
        ColorSequenceKeypoint.new(0.3, Color3.fromRGB(255, 220, 230)), 
        ColorSequenceKeypoint.new(0.6, Color3.fromRGB(255, 200, 220)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 180, 210)) 
    })
    textGradient.Rotation = 90
    textGradient.Parent = welcomeText

    local textStroke = Instance.new("UIStroke")
    textStroke.Color = Color3.fromRGB(255, 150, 200)
    textStroke.Thickness = 2
    textStroke.Transparency = 0.3
    textStroke.Parent = welcomeText

    spawn(function()
        while welcomeText and welcomeText.Parent do
            local tweenIn = TweenService:Create(welcomeText, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
                TextTransparency = 0.4
            })
            tweenIn:Play()
            tweenIn.Completed:Wait()
            
            local tweenOut = TweenService:Create(welcomeText, TweenInfo.new(0.8, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut), {
                TextTransparency = 0.5
            })
            tweenOut:Play()
            tweenOut.Completed:Wait()
            
            local currentColors = {
                ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 240, 245)),
                ColorSequenceKeypoint.new(0.3, Color3.fromRGB(255, 220, 230)),
                ColorSequenceKeypoint.new(0.6, Color3.fromRGB(255, 200, 220)),
                ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 180, 210))
            }
            
            local newColors = {
                ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 250, 255)), -- 更白
                ColorSequenceKeypoint.new(0.3, Color3.fromRGB(255, 230, 240)),
                ColorSequenceKeypoint.new(0.6, Color3.fromRGB(255, 210, 230)),
                ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 190, 220))
            }
            
            textGradient.Color = ColorSequence.new(newColors)
            wait(0.5)
            textGradient.Color = ColorSequence.new(currentColors)
        end
    end)

    local mainWindow = Instance.new("Frame")
    mainWindow.Size = config.Size
    mainWindow.Position = config.Position
    mainWindow.BackgroundColor3 = Color3.fromRGB(30, 20, 40)
    mainWindow.BackgroundTransparency = config.Transparent and 0.2 or 0
    mainWindow.ZIndex = 1
    mainWindow.Parent = screenGui

    if config.HasOutline then
        local border = Instance.new("Frame")
        border.Size = UDim2.new(1, 3, 1, 3)
        border.Position = UDim2.new(0, -1.5, 0, -1.5)
        border.BackgroundColor3 = Color3.fromRGB(120, 80, 180)
        border.ZIndex = 0
        border.Parent = mainWindow

        local innerBorder = Instance.new("Frame")
        innerBorder.Size = UDim2.new(1, -3, 1, -3)
        innerBorder.Position = UDim2.new(0, 1.5, 0, 1.5)
        innerBorder.BackgroundColor3 = Color3.fromRGB(25, 15, 35)
        innerBorder.BackgroundTransparency = 0.3
        innerBorder.Parent = border
    else
        local corner = Instance.new("UICorner")
        corner.CornerRadius = UDim.new(0, 8)
        corner.Parent = mainWindow
    end

    local titleBar = Instance.new("TextButton")
    titleBar.Size = UDim2.new(1, 0, 0, 30)
    titleBar.BackgroundColor3 = Color3.fromRGB(40, 25, 55)
    titleBar.Text = ""
    titleBar.AutoButtonColor = false
    titleBar.ZIndex = 2
    titleBar.Parent = mainWindow

    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, -40, 1, 0)
    titleLabel.Position = UDim2.new(0, 10, 0, 0)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = config.Title
    titleLabel.TextColor3 = Color3.fromRGB(255, 200, 255)
    titleLabel.TextSize = 14
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.ZIndex = 2
    titleLabel.Parent = titleBar

    if config.Icon then
        local iconLabel = Instance.new("TextLabel")
        iconLabel.Size = UDim2.new(0, 20, 0, 20)
        iconLabel.Position = UDim2.new(0, -25, 0.5, -10)
        iconLabel.BackgroundTransparency = 1
        iconLabel.Text = "⚡" -- 或者从 config.Icon 获取
        iconLabel.TextColor3 = Color3.fromRGB(255, 180, 220)
        iconLabel.TextSize = 18
        iconLabel.Parent = titleLabel
    end

    local minimizeButton = Instance.new("TextButton")
    minimizeButton.Size = UDim2.new(0, 24, 0, 24)
    minimizeButton.Position = UDim2.new(1, -28, 0.5, -12)
    minimizeButton.BackgroundColor3 = Color3.fromRGB(60, 40, 90)
    minimizeButton.Text = "─"
    minimizeButton.TextColor3 = Color3.fromRGB(220, 180, 255)
    minimizeButton.TextSize = 16
    minimizeButton.Font = Enum.Font.GothamBold
    minimizeButton.AutoButtonColor = false
    minimizeButton.ZIndex = 2
    minimizeButton.Parent = titleBar

    local contentFrame = Instance.new("ScrollingFrame")
    contentFrame.Size = UDim2.new(1, -10, 1, -35)
    contentFrame.Position = UDim2.new(0, 5, 0, 32)
    contentFrame.BackgroundTransparency = 1
    contentFrame.ScrollBarThickness = 3
    contentFrame.ScrollBarImageColor3 = Color3.fromRGB(180, 120, 255)
    contentFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
    contentFrame.ZIndex = 2
    contentFrame.Parent = mainWindow

    local windowState = {
        frame = mainWindow,
        titleBar = titleBar,
        contentFrame = contentFrame,
        minimized = false,
        originalSize = config.Size,
        originalPosition = config.Position,
        welcomeFrame = welcomeFrame, 
        welcomeText = welcomeText, 
        elements = {},
        tabs = {}
    }

    local isDragging = false
    local dragStart, windowStart = Vector2.new(0, 0), Vector2.new(0, 0)
    
    titleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            isDragging = true
            dragStart = input.Position
            windowStart = Vector2.new(mainWindow.Position.X.Offset, mainWindow.Position.Y.Offset)
            mainWindow.ZIndex = 10
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if isDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            mainWindow.Position = UDim2.new(0, windowStart.X + delta.X, 0, windowStart.Y + delta.Y)
        end
    end)
    
    UserInputService.InputEnded:Connect(function(input)
        if isDragging and input.UserInputType == Enum.UserInputType.MouseButton1 then
            isDragging = false
            mainWindow.ZIndex = 1
        end
    end)

    minimizeButton.MouseButton1Click:Connect(function()
        windowState.minimized = not windowState.minimized
        
        if windowState.minimized then
            mainWindow.Size = UDim2.new(0, config.Size.X.Offset, 0, 30)
            contentFrame.Visible = false
            minimizeButton.Text = "+"
        else
            mainWindow.Size = windowState.originalSize
            contentFrame.Visible = true
            minimizeButton.Text = "─"
        end
    end)

    local windowAPI = {}

    function windowAPI:Tab(options)
        local tabName = options.Title or "Tab"
        
        local tabFrame = Instance.new("Frame")
        tabFrame.Size = UDim2.new(1, 0, 1, 0)
        tabFrame.BackgroundTransparency = 1
        tabFrame.Visible = #windowState.tabs == 0
        tabFrame.Parent = contentFrame
        
        windowState.tabs[tabName] = {
            frame = tabFrame,
            elements = {}
        }
        
        local tabAPI = {}
        
        function tabAPI:Toggle(options)
            local toggleState = options.Value or false
            
            local toggleFrame = Instance.new("Frame")
            toggleFrame.Size = UDim2.new(1, -10, 0, 40)
            toggleFrame.Position = UDim2.new(0, 5, 0, 5 + (#windowState.tabs[tabName].elements * 45))
            toggleFrame.BackgroundColor3 = Color3.fromRGB(40, 25, 60)
            toggleFrame.BackgroundTransparency = 0.2
            toggleFrame.Parent = tabFrame
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 6)
            corner.Parent = toggleFrame
            
            local toggleButton = Instance.new("TextButton")
            toggleButton.Size = UDim2.new(1, 0, 1, 0)
            toggleButton.BackgroundTransparency = 1
            toggleButton.Text = ""
            toggleButton.AutoButtonColor = false
            toggleButton.Parent = toggleFrame
            
            local titleLabel = Instance.new("TextLabel")
            titleLabel.Size = UDim2.new(0.7, 0, 0, 20)
            titleLabel.Position = UDim2.new(0, 10, 0, 5)
            titleLabel.BackgroundTransparency = 1
            titleLabel.Text = options.Title or "Toggle"
            titleLabel.TextColor3 = Color3.fromRGB(255, 220, 255)
            titleLabel.TextSize = 12
            titleLabel.Font = Enum.Font.GothamBold
            titleLabel.TextXAlignment = Enum.TextXAlignment.Left
            titleLabel.Parent = toggleFrame
            
            local descLabel = Instance.new("TextLabel")
            descLabel.Size = UDim2.new(0.7, 0, 0, 15)
            descLabel.Position = UDim2.new(0, 10, 0, 23)
            descLabel.BackgroundTransparency = 1
            descLabel.Text = options.Desc or ""
            descLabel.TextColor3 = Color3.fromRGB(200, 170, 220)
            descLabel.TextSize = 10
            descLabel.Font = Enum.Font.Gotham
            descLabel.TextXAlignment = Enum.TextXAlignment.Left
            descLabel.Parent = toggleFrame
            
            local stateIndicator = Instance.new("Frame")
            stateIndicator.Size = UDim2.new(0, 22, 0, 22)
            stateIndicator.Position = UDim2.new(1, -32, 0.5, -11)
            stateIndicator.BackgroundColor3 = toggleState and Color3.fromRGB(255, 150, 200) or Color3.fromRGB(60, 40, 90)
            stateIndicator.Parent = toggleFrame
            
            local indicatorCorner = Instance.new("UICorner")
            indicatorCorner.CornerRadius = UDim.new(1, 0)
            indicatorCorner.Parent = stateIndicator
            
            contentFrame.CanvasSize = UDim2.new(0, 0, 0, 50 + (#windowState.tabs[tabName].elements * 45))
            
            table.insert(windowState.tabs[tabName].elements, toggleFrame)
            
            toggleButton.MouseButton1Click:Connect(function()
                toggleState = not toggleState
                stateIndicator.BackgroundColor3 = toggleState and Color3.fromRGB(255, 150, 200) or Color3.fromRGB(60, 40, 90)
                
                if options.Callback then
                    options.Callback(toggleState)
                end
            end)
            
            toggleButton.MouseEnter:Connect(function()
                toggleFrame.BackgroundColor3 = Color3.fromRGB(45, 30, 70)
            end)
            
            toggleButton.MouseLeave:Connect(function()
                toggleFrame.BackgroundColor3 = Color3.fromRGB(40, 25, 60)
            end)
            
            return {
                SetState = function(state)
                    toggleState = state
                    stateIndicator.BackgroundColor3 = toggleState and Color3.fromRGB(255, 150, 200) or Color3.fromRGB(60, 40, 90)
                end,
                GetState = function() return toggleState end
            }
        end
        
        function tabAPI:Button(options)
            local buttonFrame = Instance.new("Frame")
            buttonFrame.Size = UDim2.new(1, -10, 0, 40)
            buttonFrame.Position = UDim2.new(0, 5, 0, 5 + (#windowState.tabs[tabName].elements * 45))
            buttonFrame.BackgroundColor3 = Color3.fromRGB(50, 30, 80)
            buttonFrame.BackgroundTransparency = 0.2
            buttonFrame.Parent = tabFrame
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 6)
            corner.Parent = buttonFrame
            
            local button = Instance.new("TextButton")
            button.Size = UDim2.new(1, 0, 1, 0)
            button.BackgroundTransparency = 1
            button.Text = options.Title or "Button"
            button.TextColor3 = Color3.fromRGB(220, 180, 255)
            button.TextSize = 12
            button.Font = Enum.Font.GothamBold
            button.Parent = buttonFrame
            
            local descLabel = Instance.new("TextLabel")
            descLabel.Size = UDim2.new(1, -10, 0, 15)
            descLabel.Position = UDim2.new(0, 5, 0, 23)
            descLabel.BackgroundTransparency = 1
            descLabel.Text = options.Desc or ""
            descLabel.TextColor3 = Color3.fromRGB(200, 170, 220)
            descLabel.TextSize = 10
            descLabel.Font = Enum.Font.Gotham
            descLabel.TextXAlignment = Enum.TextXAlignment.Center
            descLabel.Parent = buttonFrame
            
            contentFrame.CanvasSize = UDim2.new(0, 0, 0, 50 + (#windowState.tabs[tabName].elements * 45))
            
            table.insert(windowState.tabs[tabName].elements, buttonFrame)
            
            button.MouseEnter:Connect(function()
                buttonFrame.BackgroundColor3 = Color3.fromRGB(60, 40, 100)
            end)
            
            button.MouseLeave:Connect(function()
                buttonFrame.BackgroundColor3 = Color3.fromRGB(50, 30, 80)
            end)
            
            -- 点击事件
            button.MouseButton1Click:Connect(function()
                if options.Callback then
                    options.Callback()
                end
            end)
        end
        
        function tabAPI:Paragraph(options)
            local paragraphFrame = Instance.new("Frame")
            paragraphFrame.Size = UDim2.new(1, -10, 0, 80)
            paragraphFrame.Position = UDim2.new(0, 5, 0, 5 + (#windowState.tabs[tabName].elements * 45))
            paragraphFrame.BackgroundColor3 = Color3.fromRGB(35, 20, 50)
            paragraphFrame.BackgroundTransparency = 0.3
            paragraphFrame.Parent = tabFrame
            
            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 6)
            corner.Parent = paragraphFrame
            
            local titleLabel = Instance.new("TextLabel")
            titleLabel.Size = UDim2.new(1, -10, 0, 25)
            titleLabel.Position = UDim2.new(0, 5, 0, 5)
            titleLabel.BackgroundTransparency = 1
            titleLabel.Text = options.Title or "Title"
            titleLabel.TextColor3 = Color3.fromRGB(255, 220, 255)
            titleLabel.TextSize = 14
            titleLabel.Font = Enum.Font.GothamBold
            titleLabel.TextXAlignment = Enum.TextXAlignment.Left
            titleLabel.Parent = paragraphFrame
            
            local descLabel = Instance.new("TextLabel")
            descLabel.Size = UDim2.new(1, -10, 0, 45)
            descLabel.Position = UDim2.new(0, 5, 0, 30)
            descLabel.BackgroundTransparency = 1
            descLabel.Text = options.Desc or "Description"
            descLabel.TextColor3 = Color3.fromRGB(200, 170, 220)
            descLabel.TextSize = 11
            descLabel.Font = Enum.Font.Gotham
            descLabel.TextXAlignment = Enum.TextXAlignment.Left
            descLabel.TextWrapped = true
            descLabel.Parent = paragraphFrame
            
            contentFrame.CanvasSize = UDim2.new(0, 0, 0, 50 + (#windowState.tabs[tabName].elements * 45))
            
            table.insert(windowState.tabs[tabName].elements, paragraphFrame)
            
            return {
                SetDesc = function(text)
                    descLabel.Text = text
                end,
                SetTitle = function(text)
                    titleLabel.Text = text
                end
            }
        end
        
        return tabAPI
    end

    function windowAPI:EditOpenButton(options)
        if options.Title and windowState.welcomeText then
            windowState.welcomeText.Text = options.Title
        end
    end

    function windowAPI:SetWelcomeText(text)
        if windowState.welcomeText then
            windowState.welcomeText.Text = text
        end
    end

    function windowAPI:HideWelcomeText()
        if windowState.welcomeFrame then
            windowState.welcomeFrame.Visible = false
        end
    end

    function windowAPI:ShowWelcomeText()
        if windowState.welcomeFrame then
            windowState.welcomeFrame.Visible = true
        end
    end

    return windowAPI
end

return WindUILibrary
